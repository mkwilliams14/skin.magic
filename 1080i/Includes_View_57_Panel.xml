    <include name="Animation_FocusBounce_Viewlayout">
        <animation type="Focus" reversible="false">
            <effect type="zoom" end="135" time="100" tween="sine" easing="out" center="auto" />
            <effect type="zoom" end="92" time="225" tween="sine" delay="100" easing="out" center="auto" />
        </animation>
    </include>

    <include name="Object_Codecs_Items">
        <param name="infohide" default="true" />
        <param name="directory" default="$VAR[Defs_ColorMode_Dir]" />
        <param name="uid" default="2001" />
        <param name="align" default="right" />
        <definition>
            <control type="grouplist">
                <visible>!Skin.HasSetting(DisableCodecs)</visible>
                <include condition="$PARAM[infohide]">Defs_InfoDialog_Visible</include>
                <visible>!$EXP[Exp_ShowPlotOverlay]</visible>
                <visible>!Control.HasFocus(62)</visible>
                <orientation>horizontal</orientation>
                <align>left</align>
                <height>72</height>
                <right>-70</right>
                <left>-70</left>
                <bottom>-90</bottom>
                <itemgap>20</itemgap>
                <visible>!String.IsEmpty(ListItem.VideoCodec) + !String.IsEmpty(ListItem.AudioCodec)</visible>
                <control type="image" id="$PARAM[uid]2">
                    <left>-10</left>
                    <fadetime>100</fadetime>
                    <centertop>50%</centertop>
                    <width>64</width>
                    <height>56</height>
                    <aspectratio align="left">keep</aspectratio>
                    <texture colordiffuse="$VAR[Defs_ColorMode_ColorDiffuse]">flags/$PARAM[directory]/resolution/$INFO[ListItem.VideoResolution].png</texture>
                    <visible>String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,episode) | String.IsEqual(ListItem.DBType,video)</visible>
                    <visible>!String.IsEmpty(Control.GetLabel($PARAM[uid]2))</visible>
                </control>
                <control type="image" id="$PARAM[uid]3">
                    <left>-10</left>
                    <fadetime>100</fadetime>
                    <centertop>50%</centertop>
                    <width>64</width>
                    <height>56</height>
                    <aspectratio align="left">keep</aspectratio>
                    <texture colordiffuse="$VAR[Defs_ColorMode_ColorDiffuse]">flags/$PARAM[directory]/other/$INFO[ListItem.VideoResolution].png</texture>
                    <visible>String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,episode) | String.IsEqual(ListItem.DBType,video)</visible>
                    <visible>!String.IsEmpty(Control.GetLabel($PARAM[uid]3))</visible>
                </control>
                <control type="image" id="$PARAM[uid]5">
                    <fadetime>100</fadetime>
                    <centertop>50%</centertop>
                    <width>71</width>
                    <height>56</height>
                    <aspectratio>keep</aspectratio>
                    <texture colordiffuse="$VAR[Defs_ColorMode_ColorDiffuse]">$VAR[Image_AudioCodec]</texture>
                    <visible>String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,episode) | String.IsEqual(ListItem.DBType,video)</visible>
                    <visible>!String.IsEmpty(Control.GetLabel($PARAM[uid]5))</visible>
                </control>
                <control type="image" id="$PARAM[uid]6">
                    <left>7</left>
                    <fadetime>100</fadetime>
                    <centertop>50%</centertop>
                    <width>52</width>
                    <height>56</height>
                    <aspectratio>center</aspectratio>
                    <texture colordiffuse="$VAR[Defs_ColorMode_ColorDiffuse]">flags/$PARAM[directory]/channels/$INFO[ListItem.AudioChannels].png</texture>
                    <visible>String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,episode) | String.IsEqual(ListItem.DBType,video)</visible>
                    <visible>!String.IsEmpty(Control.GetLabel($PARAM[uid]6))</visible>
                </control>
                <control type="image" id="$PARAM[uid]7">
                    <left>7</left>
                    <fadetime>100</fadetime>
                    <centertop>50%</centertop>
                    <width>52</width>
                    <height>56</height>
                    <aspectratio>keep</aspectratio>
                    <texture background="true">$INFO[Window(home).Property(SkinHelper.ListItem.StudioLogo)]</texture>
                    <visible>String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,episode) | String.IsEqual(ListItem.DBType,video)</visible>
                    <visible>!String.IsEmpty(Control.GetLabel($PARAM[uid]7))</visible>
                </control>
            </control>
        </definition>
    </include>

    <variable name="Label_ShowCase_InfoLine">
        <value condition="Window.IsVisible(script-script.extendedinfo-VideoList.xml)">$INFO[ListItem.MPAA,[COLOR=main_fg_100],[/COLOR]  |  ]$VAR[Label_Premiered,[COLOR=main_fg_100],[/COLOR]]</value>
        <value condition="ListItem.IsCollection">$INFO[Window(Home).Property(SkinHelper.ListItem.Year),[COLOR=main_fg_100],[/COLOR]  |  ]$VAR[Label_Duration,[COLOR=main_fg_100],[/COLOR]  |  ]$VAR[Label_Sets_Count,[COLOR=main_fg_100],[/COLOR]]</value>
        <value condition="[Container.Content(seasons) | Container.Content(tvshows)] + [!String.IsEmpty(ListItem.MPAA) | !String.IsEmpty(ListItem.Duration) | !String.IsEmpty(ListItem.Premiered)] + !String.IsEmpty(ListItem.Property(TotalEpisodes))">$INFO[ListItem.MPAA,[COLOR=main_fg_100],[/COLOR]  |  ]$VAR[Label_Premiered,[COLOR=main_fg_100],[/COLOR]  |  ]$VAR[Label_Duration,[COLOR=main_fg_100],[/COLOR]  |  ]$INFO[ListItem.Property(WatchedEpisodes),[COLOR=main_fg_100]$LOCALIZE[16102] , $LOCALIZE[20163] [/COLOR]]$INFO[ListItem.Property(TotalEpisodes),[COLOR=main_fg_100],[/COLOR]]</value>
        <value condition="!String.IsEmpty(ListItem.MPAA) | !String.IsEmpty(ListItem.Duration) | !String.IsEmpty(ListItem.Premiered)">$INFO[ListItem.MPAA,[COLOR=main_fg_100],[/COLOR]  |  ]$VAR[Label_Premiered,[COLOR=main_fg_100],[/COLOR]  |  ]$VAR[Label_Duration,[COLOR=main_fg_100],[/COLOR]  |  ]$VAR[Label_EndTime,[COLOR=main_fg_100]$LOCALIZE[31106] ,[/COLOR]]</value>
        <value condition="[String.StartsWith(Container.FolderPath,plugin://plugin.program.advanced.launcher/) | String.StartsWith(Container.FolderPath,plugin://plugin.program.advanced.emulator.launcher/) | String.StartsWith(Container.FolderPath,plugin://plugin.program.advanced.MAME.launcher/)]">$INFO[ListItem.Property(platform),[COLOR=main_fg_100],[/COLOR]]$INFO[ListItem.Studio,  |  [COLOR=main_fg_100],[/COLOR]]$INFO[ListItem.Year,  |  [COLOR=main_fg_100],[/COLOR]]$INFO[ListItem.Property(nplayers),  |  [COLOR=main_fg_100], $LOCALIZE[31308][/COLOR]]$INFO[ListItem.Property(ESRB),  |  [COLOR=main_fg_100],[/COLOR]]</value>
        <value condition="Control.IsVisible(502)">[COLOR=main_fg_100]$LOCALIZE[14224][/COLOR]</value>
        <value condition="!String.IsEmpty(Container.FolderName)">$INFO[Container.FolderName,[COLOR=main_fg_100],[/COLOR]]</value>
    </variable>

    <variable name="Label_Genre">
        <value condition="ListItem.IsCollection">$INFO[Window(Home).Property(SkinHelper.ListItem.Genre)]</value>
        <value condition="!String.IsEmpty(ListItem.Genre)">$INFO[ListItem.Genre]</value>
        <value condition="!String.IsEmpty(Window(Home).Property(SkinHelper.ListItem.Genre))">$INFO[Window(Home).Property(SkinHelper.ListItem.Genre)]</value>
        <value>Other</value>
    </variable>

    <variable name="Label_EndTime">
        <value condition="!String.IsEmpty(ListItem.EndTime) + !String.IsEqual(ListItem.EndTime,System.Time)">$INFO[ListItem.EndTime]</value>
    </variable>

    <variable name="Image_Cases">
        <value condition="SubString(ListItem.Filename,.3D.)">3d.png</value>
        <value condition="ListItem.IsCollection">set.png</value>
        <value condition="Container.Content(tvshows) | Container.Content(seasons)">tv.png</value>
        <value condition="SubString(ListItem.VideoResolution,4k)">4k.png</value>
        <value>$INFO[ListItem.VideoResolution]p.png</value>
    </variable>

</includes>

